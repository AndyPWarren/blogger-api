# EditorConfig

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Front End Languages (HTML, JS, CSS etc)

[*.js]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*less]
indent_style = space
indent_size = 4

# Misc

# YAML Based files - 2 space indent
[*.{yml, yaml, sls}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4
